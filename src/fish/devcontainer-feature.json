{
  "name": "fish",
  "id": "fish",
  "version": "1.2.1",
  "description": "Installs fish shell and Fisher plugin manager (optionally)",
  "documentationURL": "https://github.com/meaningful-ooo/devcontainer-features/tree/main/src/fish",
  "options": {
    "fisher": {
      "type": "boolean",
      "default": true,
      "description": "Install Fisher plugin manager"
    },
    "fisher_plugins": {
      "type": "string",
      "default": "",
      "description": "Install [Fish's plugins](https://github.com/jorgebucaran/awsm.fish) using `fisher`"
    }
  },
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "fish"
      }
    }
  },
  "installsAfter": [
    "ghcr.io/devcontainers/features/common-utils"
  ]
}
